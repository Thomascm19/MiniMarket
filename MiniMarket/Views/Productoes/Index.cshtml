@model IEnumerable<MiniMarket.Producto>

@{
    ViewBag.Title = "Index";
}
<h4>Agregar Productos</h4>
<div id="caja1">
    <a href="@Url.Action("Create", "Productoes")"><i id="agregar-proveedor" class="material-icons">person_add</i></a>
</div>

<div ng-app="productos" ng-controller="productoscontroller">
    <div class="row">
        <div class="col" s6>
            <h2>Productos</h2>
        </div>
        <table class="table">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Precio de Venta
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Precio de Compra
                </th>
                <th>
                    Fecha de Vencimiento
                </th>
                <th>
                    Garantia
                </th>
            </tr>
            @foreach (var item in Model)
            {
                <tr ng-repeat="producto in listaproductos">

                    <td>
                        {{producto.Nombre}}
                    </td>
                    <td>
                        {{producto.Precio_Venta}}
                    </td>
                    <td>
                        {{producto.Descripcion}}
                    </td>
                    <td>
                        {{producto.Precio_Compra}}
                    </td>
                    <td>
                        {{producto.Fecha_Vencimiento}}
                    </td>
                    <td>
                        {{producto.Garantia}}
                    </td>
                    <td>
                        @Html.ActionLink("Editar", "Edit", new { id = item.Codigo_Producto }) |
                        @Html.ActionLink("Detalles", "Details", new { id = item.Codigo_Producto }) |
                        @Html.ActionLink("Eliminar", "Delete", new { id = item.Codigo_Producto })
                    </td>
                </tr>
            }
        </table>
    </div>
    <h4>Zona de busqueda</h4>
    <div class="input-field col s9">
        <input type="text" dirname="filtro" id="filtro" ng-model="text" />
        <label>Buscar proveedor</label>

        <table class="table">
            <tr>
                <th>
                    Nombre
                </th>
                <th>
                    Precio de Venta
                </th>
                <th>
                    Descripcion
                </th>
                <th>
                    Precio de Compra
                </th>
                <th>
                    Fecha de Vencimiento
                </th>
                <th>
                    Garantia
                </th>
            </tr>
            <tr ng-repeat="producto in listaproductos  | filter:text">
                <td>
                    {{producto.Nombre}}
                </td>
                <td>
                    {{producto.Precio_Venta}}
                </td>
                <td>
                    {{producto.Descripcion}}
                </td>
                <td>
                    {{producto.Precio_Compra}}
                </td>
                <td>
                    {{producto.Fecha_Vencimiento}}
                </td>
                <td>
                    {{producto.Garantia}}
                </td>

            </tr>


        </table>

    </div>
</div>
